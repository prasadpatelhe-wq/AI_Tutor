# AI Tutor Backend - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - API Keys
# ===========================================

# Euri AI API Key (required for quiz generation and AI features)
EURIAI_API_KEY=your_euriai_api_key_here

# ===========================================
# DATABASE
# ===========================================

# Database URL (leave empty for SQLite default)
# SQLite (default): sqlite:///path/to/tutor.db
# PostgreSQL: postgresql://user:password@localhost:5432/ai_tutor
# MySQL: mysql://user:password@localhost:3306/ai_tutor
DATABASE_URL=

# Connection pool settings (for PostgreSQL/MySQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Enable SQL query logging (development only)
SQL_ECHO=false

# ===========================================
# AUTHENTICATION
# ===========================================

# Parent PIN for parental controls
PARENT_PIN=1234

# Parent phone number (optional)
PARENT_PHONE=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24

# OTP Configuration
OTP_SECRET=your-otp-secret-key-change-in-production
OTP_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5

# Echo OTP to console (development only - NEVER in production)
OTP_ECHO=false

# ===========================================
# ENVIRONMENT
# ===========================================

# Set to "production" in production environments
ENVIRONMENT=development

# ===========================================
# VECTOR STORE
# ===========================================

# Allow FAISS to load potentially untrusted index files
# Only set to true if you trust the source of your FAISS indexes
FAISS_ALLOW_DANGEROUS_DESERIALIZATION=false

# ===========================================
# LANGSMITH OBSERVABILITY (Optional)
# ===========================================

# LangSmith API key for tracing and observability
LANGCHAIN_API_KEY=
# Or use the legacy name:
# LANGSMITH_API_KEY=

# Enable LangChain tracing
LANGCHAIN_TRACING_V2=false

# LangSmith project name
LANGCHAIN_PROJECT=ai-tutor
